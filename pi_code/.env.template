# ── Supabase ──────────────────────────────────────────────────────────────────
SUPABASE_URL=https://shqyxskelognjfqohucs.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here   # Keep secret! Service role bypasses RLS

# ── Device identity ───────────────────────────────────────────────────────────
DEVICE_ID=pi-serverroom-01

# ── Thresholds ────────────────────────────────────────────────────────────────
TEMP_HIGH_C=35.0
HUMID_HIGH_PCT=70.0

# ── Timing (seconds) ─────────────────────────────────────────────────────────
SENSOR_READ_INTERVAL_SEC=5
POST_INTERVAL_SEC=30
GRID_STABLE_DELAY_SEC=15
GRID_SENSE_FILTER_MS=500

# ── Buzzer pattern (milliseconds) ────────────────────────────────────────────
BUZZ_PATTERN_ON_MS=200
BUZZ_PATTERN_OFF_MS=800

# ── Hardware polarity ─────────────────────────────────────────────────────────
# true  = signal HIGH means the condition is active/present
# false = signal LOW  means the condition is active/present
GRID_ACTIVE_HIGH=true
RELAY_ACTIVE_HIGH=true
MQ_ACTIVE_HIGH=true

# ── LCD I2C address (common: 0x27 or 0x3F) ───────────────────────────────────
LCD_I2C_ADDRESS=0x27

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_FILE=/var/log/serverroom/monitor.log
LOG_MAX_BYTES=5000000
LOG_BACKUP_COUNT=3
